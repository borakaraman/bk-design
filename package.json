{
  "name": "bk-design",
  "version": "0.3.8",
  "description": "React UI Framwork",
  "main": "dist/index.js",
  "scripts": {
    "start": "parcel public/index.html --open",
    "prepare": "npm run clean && npm run build",
    "prepublishOnly": "npm test && npm run prettier && npm run lint",
    "build": "npm run build:esm && npm run copy-files:esm",
    "build:esm": "tsc --project tsconfig.build.json",
    "copy-files:esm": "copyfiles -u 1 src/**/*.html src/**/*.css dist",
    "lint": "eslint \"{**/*,*}.{js,ts,jsx,tsx}\"",
    "prettier": "prettier --write \"{src,tests,example/src}/**/*.{js,ts,jsx,tsx}\"",
    "test": "jest --config jestconfig.json",
    "clean": "rimraf dist .parcel-cache",
    "clean:node_modules": "rimraf node_modules"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "!/dist/start.d.ts",
    "!/dist/start.js",
    "!/dist/start.js.map",
    "!/dist/**/*.tsbuildinfo",
    "!/dist/test"
  ],
  "keywords": [
    "react",
    "typescript",
    "UI-Framwork"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/borakaraman/bk-design.git"
  },
  "author": "Bora KARAMAN",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/borakaraman/bk-design/issues"
  },
  "homepage": "https://github.com/borakaraman/bk-design#readme",
  "devDependencies": {
    "@parcel/packager-raw-url": "^2.10.2",
    "@parcel/transformer-webmanifest": "^2.10.2",
    "@testing-library/react": "^14.1.0",
    "@types/jest": "^29.5.8",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "bk-design": "^0.2.5",
    "copyfiles": "^2.4.1",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^29.7.0",
    "jest-transform-stub": "^2.0.0",
    "parcel": "^2.10.2",
    "prettier": "^3.0.3",
    "process": "^0.11.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "tsc-hooks": "^1.1.2",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@types/styled-components": "^5.1.34",
    "styled-components": "^5.2.1"
  }
}
